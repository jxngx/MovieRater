<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".Movie_details_kt"
              android:orientation="vertical">

    <ImageView
            android:id="@+id/imageMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/movie_video"
    />

    <TextView
            android:id="@+id/titleMov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title:"
    />

    <TextView
            android:id="@+id/titleMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
    />

    <TextView
            android:id="@+id/overviewMov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Overview:"
    />

    <TextView
            android:id="@+id/overviewMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
    />

    <TextView
            android:id="@+id/reviewsMov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reviews"/>


    <RatingBar
            android:id="@+id/ratingForMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:isIndicator="true"/>

    <TextView
            android:id="@+id/reviewsMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Reviews yet.\nLong press here to add your review."
            android:textSize="20dp"/>


    <TextView
            android:id="@+id/languageMov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Language:"
    />

    <TextView
            android:id="@+id/languageMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
    />

    <TextView
            android:id="@+id/dateMov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Release Date"
    />

    <TextView
            android:id="@+id/dateMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
    />

    <TextView
            android:id="@+id/suitableMov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suitable for children below 13:"
    />

    <TextView
            android:id="@+id/suitableMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
    />

</LinearLayout>